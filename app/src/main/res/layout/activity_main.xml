<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9EB8FF"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >


    <EditText
        android:id="@+id/NameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Your name"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:srcCompat="@drawable/schecte" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_centerInParent="true"
            android:layout_marginBottom="45dp"
            android:text="Скидка 30%"
            android:rotation="-20"
            android:textSize="30sp"
            android:textColor="#ffffff"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Item"
        android:paddingRight="20dp"
        android:textAlignment="textEnd" />

    <Spinner
        android:id="@+id/Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="258dp">

        <ImageView
            android:id="@+id/goodImageView"
            android:layout_width="166dp"
            android:layout_height="134dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="112dp"
            app:srcCompat="@drawable/git" />

        <TextView
            android:id="@+id/PriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goodImageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="109dp"
            android:layout_marginTop="61dp"
            android:layout_marginBottom="181dp"
            android:text="0$" />

        <TextView
            android:id="@+id/CountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goodImageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="309dp"
            android:layout_marginTop="61dp"
            android:layout_marginBottom="181dp"
            android:text="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goodImageView"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="100dp"
                android:layout_weight="1"
                android:text="Order price"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/QuantitytextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Quantity"
                android:textAlignment="textStart" />

        </LinearLayout>

        <Button
            android:id="@+id/MinusButton"
            android:onClick="decreaseQuantity"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignEnd="@+id/CountTextView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="186dp"
            android:layout_marginEnd="21dp"
            android:text="-" />

        <Button
            android:id="@+id/PlusButton"
            android:onClick="increaseQuantity"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignEnd="@+id/CountTextView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="186dp"
            android:layout_marginEnd="-62dp"
            android:text="+" />

    </RelativeLayout>

    <Button
        android:id="@+id/CartButton"
        android:onClick="addToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD TO CART" />

</LinearLayout>